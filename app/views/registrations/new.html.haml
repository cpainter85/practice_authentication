%h1 Sign Up
=form_for @user, url: signup_path do |f|
    -if @user.errors.present?
      %ul
        -@user.errors.full_messages.each do |message|
          %li=message

    .div
      =f.label :email
      =f.email_field :email

    .div
      =f.label :password
      =f.password_field :password

    .div
      =f.label :password_confirmation
      =f.password_field :password_confirmation

    .div
      f.submit 'Sign Up'
